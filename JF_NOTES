# rebase against upstream then

git checkout master
git fetch upstream
git merge upstream/master # Should be a fast forward
git push
git diff shotwel-xx
git checkout debian-update
git rebase master

# Refresh docker image
docker build --no-cache -t build-package .

# Build Shotwell
docker run -v $(pwd):/mnt/src -v $(pwd)/package_cache:/var/cache/apt build-package

# Shell
docker run -it -v $(pwd):/mnt/src -v $(pwd)/package_cache:/var/cache/apt build-package /bin/bash
